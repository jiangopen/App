<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/card_name_bg"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:typeface="sans"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_corners"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_adapter_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card_corners">
            <LinearLayout
                android:id="@+id/layout_linear_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--                <TextView-->
<!--                    android:id="@+id/txt_granary_name"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_alignParentLeft="true"-->
<!--                    android:layout_marginTop="3dp"-->
<!--                    android:gravity="center"-->
<!--                    android:padding="4dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:text="熏蒸状态"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="13sp" />-->
<!--                <TextView-->
<!--                    android:id="@+id/txt_xun_status"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_marginTop="3dp"-->
<!--                    android:ellipsize="marquee"-->
<!--                    android:gravity="left"-->
<!--                    android:marqueeRepeatLimit="marquee_forever"-->
<!--                    android:padding="4dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:text="开启"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="13sp" />-->
                <TextView
                    android:id="@+id/txt_energy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="门锁状态"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txt_door_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="开启"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_linear_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_linear_1">
                <LinearLayout
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_tem_out_name"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="1#氧气"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_o2_1_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_hum_out_name"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="1#磷化氢"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_ph3_1_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/vi_1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/color2" />
                <LinearLayout
                    android:id="@+id/line_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_tem_in_name"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="1#氮气"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_o2_2_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_hum_in_name"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="2#磷化氢"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_ph3_2_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/tv_round_corner_background"
                android:text="开门"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:typeface="sans"/>
            <TextView
                android:id="@+id/txt_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/tv_round_corner_background"
                android:text="关门"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:typeface="sans"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>