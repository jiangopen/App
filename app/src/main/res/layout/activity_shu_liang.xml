<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fffffbfa"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/txt_select"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/zzz_select" />
            <TextView
                android:id="@+id/name"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/name"
                android:layout_centerHorizontal="true"
                android:text="P13"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/calendar3"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/black_alpha_128"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="点击检测"
                android:background="@drawable/tv_round_corner_background"
                android:textColor="@color/thirthh_low_ldz"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置参数"
                android:background="@drawable/tv_round_corner_background"
                android:textColor="@color/thirthh_low_ldz"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fartherView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
</FrameLayout>