<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_top_lh"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="22dp"
            android:paddingTop="20dp"
            android:text="发现新版本"
            android:textColor="@color/second_low_yy"
            android:textSize="17sp"/>
        <TextView
            android:layout_below="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:id="@+id/tv_version"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:background="@mipmap/newdownload"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新版本特性："
        android:paddingTop="22dp"
        android:paddingLeft="22dp"
        android:background="@color/second_low_yy"
        android:textColor="@color/second_top_lh"/>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:lineSpacingExtra="2dp"
        android:paddingStart="22dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:maxLines="5"
        android:background="@color/second_low_yy"
        android:textColor="@color/second_top_lh"
        android:textSize="12sp"
        android:text="新版本特性：\n1.开：\n2.户\n3.子\n4.户" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#e3e3e3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_item_bg_selector_white_left_bottom"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="下次再说"
            android:textColor="@color/second_top_lh"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <TextView
            android:id="@+id/tv_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_item_bg_selector_white_right_bottom"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="立即更新"
            android:textColor="@color/second_top_lh"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>