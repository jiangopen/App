<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A_WuWeiHuaiNanPackage.Fragment.History.HistoryGasFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fffffbfa"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/select"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/zzz_select" />
            <TextView
                android:id="@+id/name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/name"
                android:layout_centerHorizontal="true"
                android:text="选通器1"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/count"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/ten"
                android:layout_toLeftOf="@+id/time"
                android:backgroundTint="@color/black_alpha_128"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/calendar3"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/black_alpha_128"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/fartherView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wupeizhi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有数据记录哦！"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/view_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.example.multiplegranarymanager.Util.SmartTableScroll
                    android:id="@+id/table_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
</FrameLayout>