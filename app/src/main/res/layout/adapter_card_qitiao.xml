<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/card_name_bg"
        android:text="1仓"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:typeface="sans"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_corners"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_adapter_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card_corners">
            <LinearLayout
                android:id="@+id/layout_linear_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_time_name"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="时间"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txt_time_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="2024-09-06 14:49:56"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_linear_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_linear_1">
                <TextView
                    android:id="@+id/txt_qitiao_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="气调模式："
                    android:textColor="@color/black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txt_qitiao_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="智能模式——>上充气法"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_linear_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_linear_2">
                <TextView
                    android:id="@+id/txt_n2qiji_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="氮气机状态："
                    android:textColor="@color/black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txt_n2qiji_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="开启"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_linear_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layout_linear_3">
                <LinearLayout
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_n2_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="N₂"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_n2_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_n2pressure_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="压力"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_n2pressure_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_chundu_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="纯度"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_chundu_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_tem_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="温度"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_tem_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/vi_1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/color2" />
                <LinearLayout
                    android:id="@+id/line_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_pressure_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="仓压"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_pressure_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_liuliang_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="流量"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_liuliang_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_sum_name"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="累计"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/txt_sum_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="——"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>