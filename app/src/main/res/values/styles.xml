<resources>
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_spinner_background</item>
    </style>
    <style name="NoUnderLineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarSize">50dp</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/twelveth_top_yhs</item>
        <item name="colorPrimaryDark">@color/nineth_top_sl</item>
        <item name="colorAccent">@color/nineth_low_df</item>
        <!--自定义AlertDialog-->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/nineth_top_wl</item>
    </style>
